<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Shared head includes: CSS, JS, meta tags. -->
    <%- include('partials/header') %>
    <title>BeatsHQ - Home</title>
</head>
<body class="bg-hero">
    <!-- Top navigation with login/register or user links. -->
    <%- include('partials/navbar', {loggedin: loggedin, username: username}) %>

    <main class="container py-5">
        <div class="text-center text-white">
            <!-- Brand logo and headline. -->
            <img src="/public/images/beatshq-logo.png" alt="BeatsHQ Logo" class="mb-4 logo-home">
            <% if (loggedin) { %>
                <!-- Personalized greeting for signed-in users. -->
                <h1 class="display-4 mb-4">Welcome back, <%= username %>!</h1>
                <p class="lead mb-4">You're logged in successfully</p>
            <% } else { %>
                <!-- Public message for new visitors. -->
                <h1 class="display-4 mb-4">Welcome to BeatsHQ</h1>
                <p class="lead mb-4">Download music samples</p>
            <% } %>
            
            <div class="mt-4">
                <!-- Quick login/register CTA for visitors. -->
                <% if (!loggedin) { %>
                    <a href="/login" class="btn btn-primary btn-lg me-2">Login</a>
                    <a href="/register" class="btn btn-outline-light btn-lg">Register</a>
                <% } %>
            </div>
        </div>

        <!-- Discover Packs Section -->
        <div class="pack-card position-relative mt-5">
            <div class="p-4">
                <h2 class="display-6 mb-4">Discover Packs</h2>
                <div class="alert alert-dark-red mb-4 alert-permanent" role="alert">
                    <p class="mb-0 fs-6">A sneak preview of selected packs available on our site, giving you a taste of the sounds and tracks inside. <br>View the full collection on the <a href="/packs" class="fw-bold text-white">All Packs</a> page.</p>
                </div>
                <div class="row">
                    <% if (randomPacks.length === 0) { %>
                        <!-- Empty state if no packs exist yet. -->
                        <div class="col-12 text-center py-5">
                            <p class="text-muted">No packs available yet.</p>
                        </div>
                    <% } else { %>
                        <!-- Preview cards for a few random packs. -->
                        <% randomPacks.forEach(function(pack) { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="pack-card position-relative">
                                    <div class="credit-badge">
                                        <%= pack.total_credits %> Credits
                                    </div>
                                    
                                    <% if (pack.cover_image) { %>
                                        <div class="pack-cover-container">
                                            <img src="/public/images/pack-covers/<%= pack.cover_image %>" alt="<%= pack.name %>" class="pack-cover-img">
                                        </div>
                                    <% } %>
                                    
                                    <h3 class="mb-3"><%= pack.name %></h3>
                                    
                                    <% if (pack.genre) { %>
                                        <div class="mb-3">
                                            <span class="badge bg-success fs-6"><%= pack.genre %></span>
                                        </div>
                                    <% } %>
                                    
                                    <div class="pack-stats">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>
                                                <i class="bi bi-music-note-beamed"></i> 
                                                <%= pack.sample_count %> Sample<%= pack.sample_count !== 1 ? 's' : '' %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <% if (loggedin) { %>
                                            <% if (ownedPackIds.includes(pack.id)) { %>
                                                <a href="/packs/<%= pack.id %>" class="btn btn-success w-100 mb-2">
                                                    <i class="bi bi-check-circle"></i> Owned - View Details
                                                </a>
                                            <% } else { %>
                                                <a href="/packs/<%= pack.id %>" class="btn btn-primary w-100 mb-2">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                            <% } %>
                                        <% } else { %>
                                            <a href="/packs/<%= pack.id %>" class="btn btn-outline-light w-100 mb-2">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>
