<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Shared head includes: CSS, JS, meta tags. -->
    <%- include('partials/header') %>
    <title>All Packs - BeatsHQ</title>
</head>
<body class="bg-hero">
    <!-- Top navigation with login/register or user links. -->
    <%- include('partials/navbar', {loggedin: loggedin, username: username}) %>

    <main class="container py-5">
        <div class="text-white">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-4 mb-0">All Packs</h1>
                    <p class="lead">Get complete collections of sounds</p>
                </div>
                <div class="d-flex gap-3 align-items-center">
                    <% if (loggedin) { %>
                        <!-- Credits badge for logged-in users. -->
                        <div class="user-credits text-white">
                            <i class="bi bi-coin"></i> <%= userCredits %> Credits
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Search and Filter Section -->
            <div class="filter-section">
                <form method="GET" action="/packs">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label"><i class="bi bi-search"></i> Search</label>
                            <input type="text" class="form-control" name="search" placeholder="Search packs..." value="<%= filters.search || '' %>">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"><i class="bi bi-music-note-list"></i> Genre</label>
                            <select class="form-select" name="genre">
                                <option value="">All Genres</option>
                                <% genres.forEach(function(genre) { %>
                                    <option value="<%= genre %>" <%= filters.genre === genre ? 'selected' : '' %>><%= genre %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel"></i> Apply Filters
                        </button>
                        <a href="/packs" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    </div>
                </form>
            </div>

            <!-- Error state for pack loading or search. -->
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Results count -->
            <div class="mb-3">
                <p class="text-white-50">
                    <i class="bi bi-collection"></i> <%= packs.length %> pack<%= packs.length !== 1 ? 's' : '' %> found
                </p>
            </div>

            <!-- Packs Grid -->
            <div class="row">
                <% if (packs.length === 0) { %>
                    <!-- Empty state when no packs match. -->
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-collection icon-empty"></i>
                        <p class="mt-3 text-white">No packs available yet.</p>
                    </div>
                <% } else { %>
                    <!-- Render each pack card from the DB. -->
                    <% packs.forEach(function(pack) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <!-- Pack Header Card -->
                            <div class="pack-card position-relative">
                                <div class="credit-badge">
                                    <%= pack.total_credits %> Credits
                                </div>
                                
                                <% if (pack.cover_image) { %>
                                    <div class="pack-cover-container">
                                        <img src="/public/images/pack-covers/<%= pack.cover_image %>" alt="<%= pack.name %>" class="pack-cover-img">
                                    </div>
                                <% } %>
                                
                                <h3 class="mb-3"><%= pack.name %></h3>
                                
                                <% if (pack.genre) { %>
                                    <div class="mb-3">
                                        <span class="badge bg-success fs-6"><%= pack.genre %></span>
                                    </div>
                                <% } %>
                                
                                <div class="pack-stats">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="bi bi-music-note-beamed"></i> 
                                            <%= pack.sample_count %> Sample<%= pack.sample_count !== 1 ? 's' : '' %>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <% if (loggedin) { %>
                                        <% if (ownedPackIds.includes(pack.id)) { %>
                                            <a href="/packs/<%= pack.id %>" class="btn btn-success w-100 mb-2">
                                                <i class="bi bi-check-circle"></i> Owned - View Details
                                            </a>
                                        <% } else { %>
                                            <a href="/packs/<%= pack.id %>" class="btn btn-primary w-100 mb-2">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        <% } %>
                                    <% } else { %>
                                        <a href="/packs/<%= pack.id %>" class="btn btn-outline-light w-100 mb-2">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Matching Samples Section (only shown for search results). -->
                        <% if (pack.matching_samples && pack.matching_samples.length > 0) { %>
                            <div class="col-12 mb-4">
                                <div class="ms-2">
                                    <h5 class="text-white mb-3"><i class="bi bi-bookmark-fill"></i> Matching Samples</h5>
                                    <div class="row">
                                        <% pack.matching_samples.forEach(function(sample) { %>
                                            <div class="col-md-6 col-lg-4 mb-3">
                                                <div class="sample-card<%= pack.cover_image ? ' sample-card--with-cover' : '' %>" style="<%= pack.cover_image ? "background-image: linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.75)), url('/public/images/pack-covers/" + pack.cover_image + "');" : "" %>">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h5 class="text-white mb-0"><%= sample.title %></h5>
                                                        <span class="badge bg-warning text-dark"><%= sample.credits %> Credit<%= sample.credits !== 1 ? 's' : '' %></span>
                                                    </div>
                                                    
                                                    <div class="mb-2">
                                                        <span class="badge <%= sample.type === 'loop' ? 'bg-info' : 'bg-secondary' %> me-2">
                                                            <%= sample.type === 'loop' ? 'Loop' : (sample.type === 'track' ? 'Track' : 'One-Shot') %>
                                                        </span>
                                                        <% if (sample.type === 'loop' && sample.bpm) { %>
                                                            <span class="badge bg-dark"><%= sample.bpm %> BPM</span>
                                                        <% } %>
                                                    </div>
                                                    
                                                    <audio controls controlsList="nodownload" preload="none">
                                                        <source src="/samples/preview/<%= sample.id %>" type="audio/mpeg">
                                                        Your browser does not support the audio element.
                                                    </audio>
                                                    
                                                    <% if (loggedin) { %>
                                                        <% if (ownedPackIds.includes(pack.id)) { %>
                                                            <button class="btn btn-success btn-sm w-100" onclick="downloadSample('<%= sample.id %>')">
                                                                <i class="bi bi-download"></i> Download
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-primary btn-sm w-100" onclick="buySample('<%= sample.id %>', '<%= sample.credits %>')">
                                                                <i class="bi bi-coin"></i> Buy (<%= sample.credits %> Credits)
                                                            </button>
                                                        <% } %>
                                                    <% } else { %>
                                                        <a href="/login" class="btn btn-outline-light btn-sm w-100">
                                                            <i class="bi bi-lock"></i> Login to Download
                                                        </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>
